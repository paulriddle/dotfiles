general {
  colors = true
  interval = 5
}

order += "disk /"
order += "disk /home"
order += "disk /mnt/usb"
order += "load"
order += "tztime local"

disk "/" {
  format = "%avail"
}

disk "/home" {
  format = "%avail"
}

disk "/mnt/usb" {
  format = "%avail"
  format_not_mounted = ""
}

load {
  format = "%1min"
}

tztime local {
  format = "%Y-%m-%d %H:%M:%S"
}
