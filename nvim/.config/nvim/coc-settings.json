{
  "diagnostic.displayByAle": true,
  "diagnostic.refreshAfterSave": true,
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["meson.build", "Makefile"],
      "filetypes": ["c", "cpp", "objc", "objcpp"]
    }
  },
  "tsserver.npm": "/usr/bin/npm"
}
