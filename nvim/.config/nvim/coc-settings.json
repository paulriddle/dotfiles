{
  "diagnostic.displayByAle": true,
  "diagnostic.refreshAfterSave": true,
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "args": ["--background-index"],
      "rootPatterns": ["meson.build"],
      "filetypes": ["c", "cpp"]
    }
  },
  "latex.forwardSearch.executable": "zathura",
  "latex.forwardSearch.args": ["--synctex-forward", "%l:1:%f", "%p"]
}
